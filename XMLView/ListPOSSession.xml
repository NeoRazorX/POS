<view>
    <columns>
        <column name="ID" order="100">
            <widget type="text" fieldname="idarqueo"/>
        </column>
        <column name="user" order="100">
            <widget type="text" fieldname="nickusuario"/>
        </column>
        <column name='Fecha inicio' order='100' display='right'>
            <widget type='date' fieldname='fechainicio' />
        </column>
        <column name='Hora inicio' order='100' display='right'>
            <widget type='time' fieldname='horainicio' />
        </column>
        <column name="Saldo inicial" display="right" order="100">
            <widget type="number" decimal="2" fieldname="saldoinicial" />
        </column>
        <column name='Fecha fin' order='100' display='right'>
            <widget type='date' fieldname='fechafin' />
        </column>
        <column name='Hora fin' order='100' display='right'>
            <widget type='time' fieldname='horafin' />
        </column>
        <column name="Saldo final" display="right" order="100">
            <widget type="number" decimal="2" fieldname="saldofinal" />
        </column>
    </columns>
    <rows>
        <row type='status'>
            <option color='warning' fieldname='abierto'>1</option>
        </row>
    </rows>
</view>
